{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
  ],
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.exclude": {
      "node_modules": true,
      "dist": true,
      ".next": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  "cSpell.words": [
    "aerolab"
  ],
  "cSpell.language": "en"
}
